<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
     >

    <TextView
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心"/>
    <ImageView
        android:id="@+id/iv_shezhi"
        android:layout_centerVertical="true"
        android:layout_marginLeft="330dp"
        android:layout_width="23dp"
        android:layout_height="23dp"
       />
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:background="@drawable/user_info_bg"
      android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user_icon_default"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorwhie"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="点击登录"/>
  </LinearLayout>

  <LinearLayout
      android:background="@color/colorwhie"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_weight="0.99"
        android:layout_gravity="center"
        android:orientation="vertical">
      <ImageView
          android:layout_gravity="center"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/wait_pay"/>
      <TextView
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:text="待付款"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
      <ImageView
          android:layout_gravity="center"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/wait_send_good"/>
      <TextView
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:text="待发货"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
      <ImageView
          android:layout_gravity="center"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/wait_receive_good"/>
      <TextView
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:text="待收款"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
      <ImageView
          android:layout_gravity="center"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/wait_evaluate"/>
      <TextView
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:text="待评价"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
      <ImageView
          android:layout_gravity="center"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/wait_refund"/>
      <TextView
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:text="退款"/>
    </LinearLayout>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      ></TextView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@color/colorwhie"
      >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/my_order_icon"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="15sp"
          android:text="我的订单"
          android:layout_marginLeft="30dp"
          android:layout_alignParentRight="true"
          />
      <ImageView
          android:layout_alignParentRight="true"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/next_icon"/>

    </RelativeLayout>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="3dp"
      ></TextView>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      ></TextView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@color/colorwhie"
      >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/my_coupon_icon"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="15sp"
          android:text="我的现金库"
          android:layout_marginLeft="30dp"
          android:layout_alignParentRight="true"
          />
      <ImageView
          android:layout_alignParentRight="true"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/next_icon"/>

    </RelativeLayout>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      ></TextView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@color/colorwhie"
      >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/my_coupon_icon"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="15sp"
          android:text="我的抽奖单"
          android:layout_marginLeft="30dp"
          android:layout_alignParentRight="true"
          />
      <ImageView
          android:layout_alignParentRight="true"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/next_icon"/>

    </RelativeLayout>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="3dp"
      ></TextView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:background="@color/colorwhie"
      >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/personal_center_contact_service_icon"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="15sp"
          android:text="联系客服"
          android:layout_marginLeft="30dp"
          android:layout_alignParentRight="true"
          />
      <ImageView
          android:layout_alignParentRight="true"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/next_icon"/>

    </RelativeLayout>
  </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="3dp"
      ></TextView>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/colorwhie"
      android:orientation="horizontal"
      android:gravity="center"

      >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/my_collection_icon"/>

      <ImageView
          android:layout_alignParentRight="true"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/next_icon"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="15sp"
          android:background="@color/colorwhie"
          android:text="我收藏的商品"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:id="@+id/textView2" />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>



